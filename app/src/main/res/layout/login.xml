<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#528B8B">

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/login_pic"
        android:src="@drawable/app_pic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:hint="ID账号"
        android:textColorHint="#ffffff"
        android:id="@+id/login_user"
        android:lines="1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_pic"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/login_pass"
        android:hint="ID密码"
        android:lines="1"
        android:gravity="center_horizontal"
        android:textColorHint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_user"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/login_login"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_tologin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_pass"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#ffffff"
        android:layout_below="@id/login_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/no_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="没有账号？赶快注册"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/forget_pass"
        android:text="忘记密码"
        android:background="#00000000"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/to_login"
        android:layout_alignParentRight="true"
        />
    <ProgressBar
        android:id="@+id/login_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_login"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginTop="16dp"/>

</RelativeLayout>